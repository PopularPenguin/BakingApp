<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/MyCardView"
        android:layout_width="@dimen/recipe_card_width_phone"
        android:layout_height="@dimen/recipe_card_height_phone"
        card_view:cardBackgroundColor="@color/colorCard">

        <TextView
            android:id="@+id/tv_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_vertical_margin"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_list_image"
            android:layout_width="@dimen/recipe_image_width_phone"
            android:layout_height="@dimen/recipe_image_height_phone"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/text_vertical_margin"
            android:scaleType="fitXY"
            android:contentDescription="@string/content_image"
            tools:ignore="ContentDescription"/>

    </android.support.v7.widget.CardView>

</LinearLayout>